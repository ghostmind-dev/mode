{
  "name": "mode-context",
  "displayName": "mode-context",
  "description": "",
  "version": "0.0.1",
  "publisher": "ghostmind",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/ghostmind-dev/mode-context.git"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "context-watcher",
          "title": "Context watcher",
          "icon": "media/icon.svg",
          "badge": "${command:extension.getBadge}"
        }
      ]
    },
    "views": {
      "context-watcher": [
        {
          "id": "modeContext",
          "name": "Mode Context",
          "icon": "media/icon.svg",
          "contextualTitle": "Context watcher"
        }
      ]
    },
    "commands": [
      {
        "command": "mode.context",
        "title": "monitor context"
      }
    ]
  },
  "scripts": {
    "package": "vsce package",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/glob": "^8.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "eslint": "^8.33.0",
    "glob": "^8.1.0",
    "mocha": "^10.1.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@ghostmind-dev/run": "^0.2.55",
    "dotenv": "^16.0.3",
    "vsce": "^2.11.0"
  }
}